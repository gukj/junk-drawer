<div class="row text-center">
  <h1>{{model.name}}</h1>
  <small>ITEM No. {{model.itemNo}}</small>
</div>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <img class="img-responsive" src="{{model.image}}" alt="Image of the {{model.name}} memo book">
  </div>
</div>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <p class="text-center">{{model.description}}</p>
  </div>
</div>

<div class="row text-center">
  <div class="col-md-3 col-md-offset-3">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">RELEASE</h3>
      </div>
      <div class="panel-body tk-futura-pt">
        {{model.release}}
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">EDITION SIZE</h3>
      </div>
      <div class="panel-body tk-futura-pt">
        {{model.editionSize}}
      </div>
    </div>
  </div>
</div>

{{outlet}}
