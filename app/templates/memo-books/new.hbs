<div class="form-horizontal">
  <div class="form-group has-feedback {{if isValidName 'has-success'}}">
    <label class="col-sm-2 control-label">Name*</label>
    <div class="col-sm-10">
      {{input type="text" value=model.name class="form-control" placeholder="The name of the memo book"}}
      {{#if isValidName}}<span class="glyphicon glyphicon-ok form-control-feedback"></span>{{/if}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Item No.</label>
    <div class="col-sm-10">
      {{input type="text" value=model.itemNo class="form-control" placeholder="Item No. of the edition"}}
    </div>
  </div>
  {{#form-field-item name="Edition Size" }}
    {{input type="text" value=model.editionSize class="form-control" placeholder="The edition size of this edition"}}
  {{/form-field-item}}
  {{#form-field-item name="Description" }}
    {{input type="text" value=model.description class="form-control" placeholder="A description of the memo book"}}
  {{/form-field-item}}
  {{#form-field-item name="Release" }}
    {{input type="text" value=model.release class="form-control" placeholder="A description of the memo book"}}
  {{/form-field-item}}
  <div class="form-group">
    <label class="col-sm-2 control-label">Image*</label>
    <div class="col-sm-10">
      {{x-file-input name="files" multiple=false action="didSelectFiles" alt="Choose a File" class="btn btn-primary btn-block"}}
      {{#if isValidUpload}}<div class="alert alert-success text-center" style="margin-top:10px" role="alert">Image upload succesfull!</div>{{/if}}
      {{#if error}}<div class="alert alert-danger text-center" style="margin-top:10px" role="alert">There was an error with the upload. Error code: {{error.code}}</div>{{/if}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-primary" {{action 'saveMemoBook' model}} disabled= {{unless isValid true}}>Save memo book</button>
    </div>
  </div>
</div>
